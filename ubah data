import mysql.connector

db = mysql.connector.connect(
    host='localhost',
    user='root',
    password='',
    database='dbmahasiswa'
)

cursor = db.cursor()

nim = input("Masukkan nim yang ingin diubah : ")
nama = input("masukkan nama baru : ")
alamat = input("masukkan alamat baru : ")
telepon = input("masukkan no telepon baru : ")
jurusan = input("masukkan jurusan baru : ")

sql = """
UPDATE mahasiswa 
SET nama = %s , alamat = %s, telepon = %s, jurusan = %s
WHERE nim = %s
"""

cursor.execute(sql, (nama, alamat, telepon, jurusan, nim))
db.commit()

if cursor.rowcount > 0:
    print("Data berhasil diubah")
else:
    print("nim tidak ditemukan")

cursor.close()
db.close()

