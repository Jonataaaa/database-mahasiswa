import mysql.connector

db = mysql.connector.connect(
    host='localhost',
    user='root',
    password='',
    database='dbmahasiswa'
)

cursor = db.cursor()

sql = """
INSERT INTO mahasiswa (nim, nama, alamat, telepon, jurusan)
VALUES (%s, %s, %s,%s,%s)
"""

while True:
    nim = input("Masukkan nim : ")
    nama = input("masukkan nama : ")
    alamat = input("masukkan alamat : ")
    telepon = input("masukkan telepon : ")
    jurusan = input("masukkan jurusan : ")

    cursor.execute(sql, (nim, nama, alamat, telepon, jurusan))
    db.commit()

    lanjut = input("Tambah data (y/n): ")
    if lanjut.lower() != 'y':
        break

print("Selesai")

cursor.close()
db.close()
